@import '~@/common/stylus/index'
.seller-wrapper
  position: absolute
  top 174px
  left 0
  bottom: 0
  right 0
  overflow hidden
  .seller-content
    .info
      padding 18px
      .title
        border-bottom: 1px solid rgba(7, 17, 27, 0.1)
        position relative
        padding-bottom: 18px
        .text
          font-size: 14px
          color rgb(7, 17, 27)
          line-height: 14px
          font-weight: 700
        .star-wrapper
          display flex
          margin-top: 8px
          flex-direction: row
          .rate-count
            font-size: 10px
            color rgb(77, 85, 93)
            margin 0 12px 0 8px
            line-height: 16px
          .sell-count
            font-size: 10px
            color rgb(77, 85, 93)
            line-height: 16px
        .collect
          position: absolute
          right 0
          top 50%
          transform: translateY(-50%)
          min-width: 30px
          .icon-favorite
            display block
            font-size 24px
            color rgb(77, 85, 93)
            line-height: 24px
            text-align: center
            &.active
              color rgb(240, 20, 20)
          .text
            display: block
            font-size: 10px
            color rgb(77, 85, 93)
            line-height: 10px
            text-align: center
      .remark
        padding-top: 18px
        display flex
        flex-direction: row
        justify-content: center
        align-items: center
        .block
          flex 1
          display flex
          flex-direction: column
          justify-content: center
          align-items: center
          &:nth-of-type(2)
            border-left: 1px solid rgba(7, 17, 27, 0.1)
            border-right: 1px solid rgba(7, 17, 27, 0.1)
          & > h2
            font-size: 10px
            color rgb(147, 153, 159)
            line-height: 10px
          .content
            color rgb(7, 17, 27)
            font-size: 10px
            margin-top: 4px
            .num
              font-size 24px
              font-weight: 200
    .activitiesWrapper
      padding 18px 18px 0 18px
      .activities
        border-bottom: 1px solid rgba(7, 17, 27, 0.1)
        .bulletin
          & > h1
            color rgb(7, 17, 27)
            font-size: 14px
            line-height: 14px
            font-weight: 700
          .content
            padding 8px 12px 16px 12px
            font-size: 12px
            font-weight: 200
            color rgb(240, 20, 20)
            line-height: 24px
      .supports
        .item
          padding 16px 12px
          border-bottom: 1px solid rgba(7, 17, 27, 0.1)
          display flex
          flex-direction: row
          align-items: center
          &:last-child
            border-bottom none
          .text
            font-size: 12px
            font-weight: 200
            color rgb(7, 17, 27)
            margin-left: 6px
    .seller-imgs
      font-size: 14px
      color rgb(7, 17, 27)
      line-height: 14px
      font-weight: 700
      padding 18px
      .img-wrapper
        width 100%
        display: flex
        flex-direction: row
        overflow hidden
        white-space nowrap
        margin-top: 12px
        img
          margin-left: 6px
          &:first-child
            margin-left: 0px
    .seller-info
      padding 18px 18px 0 18px
      h1
        font-size 14px
        color rgb(7, 17, 27)
        line-height: 14px
        font-weight: 700
        padding 18px
      .info-list
        .info
          padding 16px 12px
          border-top: 1px solid rgba(7, 17, 27, 0.1)
          font-size: 12px
          font-weight: 200
          color: rgb(7, 17, 27)
