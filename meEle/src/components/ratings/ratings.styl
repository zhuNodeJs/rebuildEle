@import '~@/common/stylus/index'
.ratingsWrapper
  position: absolute
  top 174px
  left 0
  bottom: 0
  right 0
  overflow hidden
  .ratings-content
    .info
      padding 18px 24px
      display: flex
      .mark
        display: flex
        flex-direction: column
        justify-content: center
        padding-right: 24px
        border-right: 1px solid rgba(7,17,27,0.1)
        .num
          width: 100%
          font-size: 24px
          color rgb(255, 153, 0)
          line-height: 28px
          text-align: center
        .text
          width: 100%
          font-size 12px
          color rgb(7, 17, 27)
          line-height: 12px
          text-align: center
          padding 6px 0 8px 0
        .contrast
          width 100%
          font-size: 10px
          color rgb(147, 153, 159)
          line-height: 20px
          text-align: center
      .stars
        padding-left: 24px
        .serviceScore
          display: flex
          flex-direction: row
          .text
            font-size 12px
            color rgb(7, 17, 27)
            line-height: 12px
          .star
            margin 0px 12px
          .num
            color rgb(255, 153, 0)
            font-size: 12px
            line-height: 12px
        .foodScore
          display: flex
          flex-direction: row
          margin 8px 0
          .text
            font-size 12px
            color rgb(7, 17, 27)
            line-height: 12px
          .star
            margin 0px 12px
          .num
            color rgb(255, 153, 0)
            font-size 12px
            line-height: 12px
        .deliveryTime
          display flex
          .text
            font-size 12px
            color rgb(7, 17, 27)
            line-height: 12px
          .time
            margin-left: 12px
            font-size 12px
            color rgb(147, 153, 159)
            line-height: 13px
    .evaluation
      width 100%
      .classify
        margin-left: 18px
        margin-right: 18px
        padding 18px 0
        border-bottom: 1px solid rgba(7,17,27,0.1)
        .item
          font-size 12px
          color rgb(77, 85, 93)
          padding 8px 12px
          border-radius 2px
          background-color rgba(0,160,220,0.2)
          margin-left: 8px
          &:first-child
            margin-left: 0
          .count
            font-size 8px
            margin-left: 2px
          &.bad
            background-color: rgba(77, 85, 93, 0.2)
            &.badActive
              background-color: #4d555d
              color: #ffffff
          &.active
            background-color: rgb(0, 160, 220)
            color #ffffff
      .switch
        padding 12px 18px
        border-bottom: 1px solid rgba(7,17,27,0.1)
        .icon-check_circle
          font-size: 24px
          color: rgb(147, 153, 159)
          vertical-align: middle
          &.on
            color #00c850
        .text
          font-size: 12px
          color rgb(147, 153, 159)
      .evel-list
        padding 0 18px
        & > ul
          .evel
            padding 18px 0
            display flex
            flex-direction: row
            border-bottom: 1px solid rgba(7, 17, 27, 0.1)
            .avatar
              flex 0 0 28px
              & > img
                border-radius: 50%
            .content
              padding-left: 12px
              flex: 1
              .user
                font-size 10px
                color rgb(7, 17, 27)
                display: flex
                .name
                  flex 1
                  text-align: left
                .rateTime
                  flex 1
                  text-align: right
                  font-size: 10px
                  font-weight: 200
                  color rgb(147, 153, 159)
              .star-wrapper
                padding 4px 0 6px 0
                display: flex
                flex-direction: row
                .star
                  vertical-align: middle
                .deliveryTime
                  margin-left: 6px
                  font-size: 10px
                  font-weight: 200
                  color rgb(147, 153, 159)
                  display: flex
                  align-items: center
              .text
                font-size: 12px
                color rgb(7, 17, 27)
                line-height: 18px
              .recommend
                margin-top: 8px
                .icon
                  display inline-block
                  font-size: 12px
                  color rgb(0, 160, 220)
                  height: 18px
                  vertical-align: text-bottom
                .dish
                  display: inline-block
                  font-size: 9px
                  color rgb(147, 153, 159)
                  line-height: 16px
                  border: 1px solid rgba(7, 17, 27, 0.1)
                  border-radius: 2px
                  padding 0px 6px
                  margin-left: 8px
                  max-width: 74px
                  white-space nowrap
                  overflow hidden
                  text-overflow: ellipsis

