@import '~@/common/stylus/index'
.detailWrapper
  position fixed
  top 0
  left 0
  width 100%
  bottom 48px
  right 0
  background #ffffff
  .foodDetail
    background #ffffff
    .back
      position absolute
      color #ffffff
      top 12px
      left 6px
      font-size: 20px
      padding 10px
    .info
      position relative
      padding 18px
      box-sizing: content-box
      .title
        font-size 14px
        font-weight: 700
        color rgb(7, 17, 27)
        line-height: 14px
      .monRating
        font-size: 10px
        color rgb(147, 153, 159)
        line-height: 10px
        padding-top: 18px
        & > span:last-child
          margin-left: 6px
      .price
        display flex
        flex-direction row
        align-items flex-end
        color rgb(240, 20, 20)
        font-size 14px
        font-weight 700
        padding-top 18px
        .oldPrice
          font-size: 10px
          font-weight: 700
          color rgb(147, 153, 159)
          margin-left 8px
      .shopCart
        position: absolute
        right 18px
        bottom 18px
        z-index 9
        .text
          font-size: 10px
          color: rgb(255, 255, 255)
          line-height: 12px
          padding 6px 12px
          background-color: rgb(0, 160, 220)
          border-radius: 12px
      .cartcontrol
        position absolute
        right: 17px;
        bottom: 17px;
        z-index -1
    .desc
      padding: 18px
      .title
        font-size: 14px
        font-weight: 500
        color #07111b
        margin-bottom 6px
      .content
        font-size: 12px
        font-weight: 200
        color: rgb(77, 85, 93)
        line-height: 24px
        padding: 0 8px
