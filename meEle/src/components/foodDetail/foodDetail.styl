@import '~@/common/stylus/index'
.detailWrapper
  position fixed
  top 0
  left 0
  width 100%
  bottom 48px
  right 0
  background #ffffff
  &.move-enter-active, &.move-leave-active
    transform: translate3d(0, 0, 0)
  &.move-enter, &.move-leave-active
    transform: translate3d(100%, 0, 0)
  .foodDetail
    background #ffffff
    .back
      position absolute
      color #ffffff
      top 12px
      left 6px
      font-size: 20px
      padding 10px
    .info
      position relative
      padding 18px
      box-sizing: content-box
      .title
        font-size 14px
        font-weight: 700
        color rgb(7, 17, 27)
        line-height: 14px
      .monRating
        font-size: 10px
        color rgb(147, 153, 159)
        line-height: 10px
        padding-top: 18px
        & > span:last-child
          margin-left: 6px
      .price
        display flex
        flex-direction row
        align-items flex-end
        color rgb(240, 20, 20)
        font-size 14px
        font-weight 700
        padding-top 18px
        .oldPrice
          font-size: 10px
          font-weight: 700
          color rgb(147, 153, 159)
          margin-left 8px
      .shopCart
        position: absolute
        right 18px
        bottom 18px
        z-index 9
        .text
          font-size: 10px
          color: rgb(255, 255, 255)
          line-height: 12px
          padding 6px 12px
          background-color: rgb(0, 160, 220)
          border-radius: 12px
          &.fade-enter-active, &.fade-leave-active
            transition opacity 0.2s linear
          &.fade-enter, &.fade-leave-active
            opacity 0
      .cartcontrol
        position absolute
        right: 17px;
        bottom: 17px;
        z-index 8
    .desc
      padding: 18px
      .title
        font-size: 14px
        font-weight: 500
        color #07111b
        margin-bottom 6px
      .content
        font-size: 12px
        font-weight: 200
        color: rgb(77, 85, 93)
        line-height: 24px
        padding: 0 8px
    .evaluation
      padding 18px
      position relative
      .title
        font-size: 14px
        font-weight 500
        color #07111b
      .classify
        font-size: 12px
        padding 18px 0px
        border-bottom: 1px solid rgba(7, 17, 27, 0.1)
        .item
          display inline-block
          border-radius: 1px
          padding 8px 12px
          margin-right: 8px
          color rgb(77, 85, 95)
          background-color: rgba(0, 160, 220, 0.2)
          .count
            font-size: 8px
            margin-left: 5px
          &.active
            color #ffffff
            background rgb(0, 169, 220)
          &.bad
            background rgba(77, 85, 93, 0.2)
          &.badActive
            background #4d555d
      .switch
        display flex
        flex-direction: row
        align-items: center
        padding 12px 0px
        border-bottom: 1px solid rgba(7, 17, 27, 0.1)
        .icon-check_circle
          font-size: 24px
          color rgb(147,153,159)
          &.on
            color rgb(0, 169, 220)
        .text
          font-size: 12px
          color: rgb(147,153,159)
          margin-left: 4px
      .evel-list
        & > ul
          .evel
            padding 16px 0px
            border-bottom: 1px solid rgba(7, 17, 27, 0.1)
            .userInfo
              font-size: 10px
              color rgb(147, 153, 159)
              display: flex
              .time
                flex 1
                text-align: left
              .user
                flex 1
                text-align: right
                .avatar
                  & > img
                    border-radius: 50%
                    box-sizing: content-box
                    padding-left: 6px
                    vertical-align: middle
            .content
              .icon
                font-size: 12px
                color rgb(147, 153, 159)
                line-height: 24px
                &.icon-thumb_down
                  color rgb(147, 153, 159)
                &.icon-thumb_up
                  color rgb(0, 160, 220)
              .text
                font-size: 12px
                color rgb(7, 17, 27)
                line-height: 16px
                margin-left: 4px

